---
permalink: /tags/
layout: base.layout.njk
eleventyNavigation:
  key: Topics
  order: 5
---
{% extends "list_page.partial.njk" %}

{% block header_content %}
    Tags
{% endblock %}

{% block list_content %}
    {% set posts_list = collections[tag] %}
    <div class="px-2 w-full my-16 flex flex-wrap">
        {% for tag in collections.tagList %}
            {% set tagUrl %}/tags/{{ tag }}/{% endset %}
            <a 
                href="{{ tagUrl | url }}" 
                class="mr-4 mb-4 p-2 font-semibold text-gray-100 bg-purple-700 hover:bg-purple-400 hover:text-gray-900 rounded-md"
            >#{{ tag }}</a>
        {% endfor %}
        {% include "posts_list.partial.njk" %}
    </div>
{% endblock %}
