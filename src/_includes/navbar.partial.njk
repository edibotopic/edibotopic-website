<nav class="nav flex flex-wrap items-center justify-between px-8 md:px-16 py-4">
    {# logo #}
    <a 
        href="{{ '/' | url }}" 
        style="width: 6rem; height: 6rem;"
    >
        <img class="w-full h-full" src="/assets/img/icon.svg" alt="Boyle flask">
    </a>
    {# toggle button #}
    <input class="menu-btn hidden" type="checkbox" id="menu-btn">
    <label class="menu-icon block cursor-pointer md:hidden px-2 py-4 relative select-none" for="menu-btn">
        <span class="navicon bg-grey-darkest flex items-center relative"></span>
    </label>
    {# navbar item list #}
    <ul class="menu m-0 w-full md:w-auto border-b md:border-none flex justify-end list-reset">
        {% for entry in collections.all | eleventyNavigation %}
            <li class="border-t md:border-none">
                <a 
                    class="block md:inline-block px-4 py-2 no-underline text-lg md:text-xl lowercase font-medium hover:underline" 
                    href="{{ entry.url | url }}"
                >
                    {{ entry.title }}
                </a>
            </li>
        {% endfor %}
    </ul>
</nav>
