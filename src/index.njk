<section 
    class="mt-16 md:mt-8 w-full md:max-w-4xl mx-auto px-8 flex flex-col justify-center"
    style="height: 75vh;"
>
    {# headers #}
    <h1 class="mb-8 text-5xl text-black uppercase tracking-tight font-bold">edibotopic</h1>
    <h2 
        class="text-4xl text-gray-700 lowercase break-words leading-none tracking-tight"
    >
        food, technology, philosophy, art
    </h2>

    {# social icons from _data #}
    <ul class="mt-16 w-full h-12 flex justify-start items-center">
        {% for item in social %}
            <a 
                class="w-12 h-full mr-1 bg-purple-700 flex justify-center items-center transform hover:-translate-y-1 hover:scale-110 transition ease-in-out duration-200" 
                href="{{item.url}}"
                target="_blank"
                rel="noopener noreferrer"
            >
                <img src="{{item.icon}}" alt="{{item.alt}}" class="w-8 h-8 block">
            </a>
        {% endfor %}
    </ul>
</section>
